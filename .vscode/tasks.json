{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run E2E Tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/ci-start.sh"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "pip",
      "args": [
        "install",
        "-e",
        ".[dev]"
      ],
      "problemMatcher": []
    },
    {
      "label": "Install Node Dependencies",
      "type": "shell",
      "command": "npm",
      "args": [
        "install"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build Project",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Linter (Python)",
      "type": "shell",
      "command": "pylint",
      "args": [
        "**/*.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run Linter (ESLint)",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "lint"
      ],
      "problemMatcher": []
    },
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "pytest",
      "args": [
        "tests/",
        "-v"
      ],
      "problemMatcher": []
    }
  ]
}
