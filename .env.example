# === REQUIRED: Cloudflare Tunnel ===
# Get from: Zero Trust → Networks → Tunnels → Create → Token
CF_TUNNEL_TOKEN=PASTE_TUNNEL_TOKEN_HERE

# === Aurora Backend Configuration ===
# Health endpoint guard (append ?token=ok by default)
AURORA_HEALTH_TOKEN=ok
AURORA_GIT_URL=https://github.com/yourusername/aurora-x.git
AURORA_GIT_BRANCH=main
AURORA_ENV=production
AURORA_DEFAULT_LANG=python

# === Chango Frontend Configuration ===
NODE_ENV=production
SESSION_SECRET=your-secure-session-secret-here-minimum-32-chars
VITE_API_URL=/api
VITE_WS_URL=/ws

# === Discord Notifications ===
# Discord webhook for deploy/synthesis/update notifications
AURORA_DISCORD_WEBHOOK=
DISCORD_WEBHOOK_URL=

# === Database Configuration ===
# PostgreSQL database URL (if using external database)
DATABASE_URL=postgresql://user:password@host:5432/database

# === Docker Configuration ===
# Project name for docker-compose
COMPOSE_PROJECT_NAME=aurora-x

# Volume mount paths (relative or absolute)
AURORA_DATA_PATH=./data
AURORA_RUNS_PATH=./runs
AURORA_LOGS_PATH=./logs

# === Service Ports ===
# Internal service ports (usually don't need to change)
AURORA_PORT=8000
CHANGO_PORT=5000
NGINX_PORT=80

# Memory Fabric Configuration
# Host address for Memory Fabric service (default: 127.0.0.1)
# Use 0.0.0.0 to bind to all interfaces, or specify a specific IP
MEMORY_FABRIC_HOST=127.0.0.1

# === Security Configuration ===
# CORS settings
CORS_ORIGIN=*
ALLOWED_HOSTS=localhost,127.0.0.1

# === Logging Configuration ===
LOG_LEVEL=info
DEBUG=false

# === GitHub Repository (for Docker image) ===
# Used by docker-compose.yml for the image name
GITHUB_REPOSITORY=yourusername/aurora-x
