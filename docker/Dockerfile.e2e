# syntax=docker/dockerfile:1
FROM python:3.11-slim
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1
WORKDIR /app

# Keep it deterministic & small; install only what we need for health check.
RUN python -m pip install --upgrade pip && \
    pip install --no-cache-dir fastapi uvicorn

# Bring in the app
COPY . /app

EXPOSE 8000
CMD ["uvicorn","aurora_x.serve:app","--host","0.0.0.0","--port","8000","--log-level","warning"]
