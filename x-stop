#!/bin/bash
# Aurora Universal Stop Command - Unix Shell Wrapper
# This script calls the Python version, ensuring we're in the correct directory

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Try to use python3 first, fall back to python
if command -v python3 &> /dev/null; then
    exec python3 x-stop.py "$@"
elif command -v python &> /dev/null; then
    exec python x-stop.py "$@"
else
    echo "[ERROR] Python not found. Please install Python 3."
    exit 1
fi
