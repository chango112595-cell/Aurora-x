# Aurora-X English Mode Makefile Additions
# Add these targets to your main Makefile or include this file

.PHONY: chat approve english-test english-demo english-status

# === English Mode Variables ===
PROMPT ?= find the largest number in a list
API_URL ?= http://127.0.0.1:$${AURORA_PORT:-5001}

# === Interactive Chat Mode ===
chat:
	@echo "ðŸ—£ï¸  Aurora-X Interactive English Mode"
	@echo "Enter your request in plain English:"
	@read -r prompt; \
	if [ -z "$$prompt" ]; then \
		echo "Using default: $(PROMPT)"; \
		prompt="$(PROMPT)"; \
	fi; \
	echo "ðŸ“ Generating spec from: $$prompt"; \
	python tools/english_to_spec.py "$$prompt" && \
	latest_spec=$$(ls -t specs/requests/*.md 2>/dev/null | head -1); \
	if [ -n "$$latest_spec" ]; then \
		echo "âœ… Spec created: $$latest_spec"; \
		echo "ðŸ”§ Compiling to code..."; \
		python tools/spec_compile_v3.py "$$latest_spec" && \
		latest_run=$$(ls -dt runs/run-* 2>/dev/null | head -1); \
		echo "ðŸ“Š Code generated in: $$latest_run"; \
		echo "View report: $$latest_run/report.html"; \
	else \
		echo "âŒ Failed to generate spec"; \
	fi

# === API-based Chat (requires server running) ===
chat-api:
	@echo "ðŸŒ Using Aurora-X Chat API"
	@echo "Enter your request:"
	@read -r prompt; \
	if [ -z "$$prompt" ]; then \
		prompt="$(PROMPT)"; \
		echo "Using default: $$prompt"; \
	fi; \
	curl -X POST $(API_URL)/api/chat \
		-H "Content-Type: application/json" \
		-d "{\"prompt\": \"$$prompt\", \"auto_synthesize\": true}" | \
		python -m json.tool

# === Approve Synthesis Runs ===
approve:
	@echo "ðŸ“‹ Checking pending synthesis runs..."
	@curl -s $(API_URL)/api/approve | python -m json.tool
	@echo ""
	@echo "Enter token to approve (or press Enter to skip):"
	@read -r token; \
	if [ -n "$$token" ]; then \
		echo "Approving synthesis for token: $$token"; \
		curl -X POST $(API_URL)/api/approve \
			-H "Content-Type: application/json" \
			-d "{\"token\": \"$$token\", \"approved\": true}" | \
			python -m json.tool; \
	else \
		echo "No approval action taken"; \
	fi

# === Test English Mode ===
english-test:
	@echo "ðŸ§ª Testing English Mode Components"
	@echo ""
	@echo "1ï¸âƒ£ Testing english_to_spec.py..."
	@python tools/english_to_spec.py "reverse a string" > /tmp/english_test.log 2>&1 && \
		echo "   âœ… english_to_spec.py works" || echo "   âŒ english_to_spec.py failed"
	@echo ""
	@echo "2ï¸âƒ£ Testing fallback template..."
	@python -c "from aurora_x.synthesis.fallback import generate_fallback_function; \
		print('   âœ… Fallback template works') if generate_fallback_function('def test(x: int) -> str', 'Test') else print('   âŒ Fallback failed')" 2>/dev/null || \
		echo "   âŒ Could not import fallback module"
	@echo ""
	@echo "3ï¸âƒ£ Testing flow_ops.py fallback integration..."
	@python -c "from aurora_x.synthesis.flow_ops import impl_for; \
		code = impl_for('def unknown_func(x: int) -> int', 'some random unrecognized function'); \
		print('   âœ… flow_ops fallback works' if 'NotImplementedError' not in code else '   âŒ Still raises NotImplementedError')" 2>/dev/null || \
		echo "   âŒ Could not test flow_ops"
	@echo ""
	@echo "4ï¸âƒ£ Checking API endpoints (requires server)..."
	@curl -s $(API_URL)/api/english/status > /dev/null 2>&1 && \
		echo "   âœ… English API endpoints available" || \
		echo "   âš ï¸  Server not running or endpoints not available"

# === Demo English Mode ===
english-demo:
	@echo "ðŸŽ­ Aurora-X English Mode Demo"
	@echo "================================"
	@echo ""
	@echo "Demo 1: Simple function request"
	@python tools/english_to_spec.py "add two numbers together"
	@echo ""
	@echo "Demo 2: Complex function request"
	@python tools/english_to_spec.py "find all prime numbers in a list and return their sum"
	@echo ""
	@echo "Demo 3: Unrecognized pattern (uses fallback)"
	@python tools/english_to_spec.py "perform quantum entanglement calculation"
	@echo ""
	@echo "================================"
	@echo "âœ… Demo complete. Check specs/requests/ for generated files"
	@ls -la specs/requests/*.md 2>/dev/null | tail -3

# === Check English Mode Status ===
english-status:
	@echo "ðŸ“Š Aurora-X English Mode Status"
	@echo "================================"
	@echo ""
	@echo "Components:"
	@[ -f tools/english_to_spec.py ] && echo "  âœ… english_to_spec.py exists" || echo "  âŒ english_to_spec.py missing"
	@[ -f aurora_x/synthesis/fallback.py ] && echo "  âœ… fallback.py exists" || echo "  âŒ fallback.py missing"
	@[ -f aurora_x/serve_addons.py ] && echo "  âœ… serve_addons.py exists" || echo "  âŒ serve_addons.py missing"
	@echo ""
	@echo "Directories:"
	@[ -d specs/requests ] && echo "  âœ… specs/requests/ directory exists" || echo "  âš ï¸  specs/requests/ missing (will be created)"
	@echo ""
	@echo "Recent English specs:"
	@ls -lt specs/requests/*.md 2>/dev/null | head -5 || echo "  No specs found in specs/requests/"
	@echo ""
	@echo "Server endpoints (if running):"
	@curl -s $(API_URL)/api/english/status 2>/dev/null | python -m json.tool 2>/dev/null || echo "  Server not accessible"

# === Quick English Mode ===
quick-english:
	@$(MAKE) english-test
	@echo ""
	@$(MAKE) english-demo

