# Aurora-X Production Environment Configuration
# =============================================
# IMPORTANT: Generate secure values before deploying!

# === REQUIRED: Security Secrets ===
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_64_BYTE_HEX_SECRET
ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# === Required: Node Environment ===
NODE_ENV=production

# === Cloudflare Tunnel (if using) ===
CF_TUNNEL_TOKEN=PASTE_TUNNEL_TOKEN_HERE

# === Aurora Backend Configuration ===
AURORA_HEALTH_TOKEN=ok
AURORA_ENV=production
AURORA_DEFAULT_LANG=python

# === Database Configuration ===
# PostgreSQL database URL
DATABASE_URL=postgresql://user:password@host:5432/aurora_db

# === API Keys (Optional) ===
ANTHROPIC_API_KEY=

# === Service Ports ===
AURORA_PORT=8000
CHANGO_PORT=5000

# === Security Configuration ===
CORS_ORIGIN=https://your-domain.com
ALLOWED_HOSTS=your-domain.com

# === Session Configuration ===
SESSION_SECRET=REPLACE_WITH_32_CHAR_SECRET
