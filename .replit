[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Aurora Self-Learning"
author = 47570941
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m aurora_x.self_learn --sleep 30 --max-iters 50 --beam 20"

[[workflows.workflow]]
name = "Restart & Activate Aurora Chat"
author = 49690521
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîÑ Restarting Aurora with chat enabled...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Aurora Chat is now available!\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üìç Open the chat at: /chat or /aurora-ui\""

[[workflows.workflow]]
name = "Start Bridge Service"
author = 49694392
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m aurora_x.bridge.serve"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Luminar Nexus V2"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Aurora Nexus V3"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Luminar Nexus V2"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 tools/luminar_nexus_v2.py serve"
waitForPort = 8000

[[workflows.workflow]]
name = "Aurora Nexus V3"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 aurora_nexus_v3/main.py"

[workflows.workflow.metadata]
outputType = "console"

[agent]
integrations = ["javascript_mem_db:1.0.0", "javascript_websocket:1.0.0", "javascript_anthropic:1.0.0"]
expertMode = true
