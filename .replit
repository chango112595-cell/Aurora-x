# Aurora Factory Worker Configuration
entrypoint = "aurora_x/main.py"

# Auto-pull latest code and run Aurora backend (Python)
run = "bash -lc 'git pull --ff-only || true; bash scripts/bridge_autostart.sh || echo \"Bridge startup skipped\"; python3 aurora_x/main.py'"
onBoot = "bash -lc 'git pull --ff-only || true'"
modules = ["nodejs-20", "postgresql-16", "python-3.11", "python3", "web"]
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "gnupg", "libiconv", "libsodium", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc", "tmux", "tree", "xcodebuild", "zlib"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "server"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6000
externalPort = 6000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 24678
externalPort = 3001

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Aurora Self-Learning"
author = 47570941
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m aurora_x.self_learn --sleep 30 --max-iters 50 --beam 20"

[[workflows.workflow]]
name = "Restart & Activate Aurora Chat"
author = 49690521
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîÑ Restarting Aurora with chat enabled...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Aurora Chat is now available!\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üìç Open the chat at: /chat or /aurora-ui\""

[[workflows.workflow]]
name = "Start Bridge Service"
author = 49694392
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m aurora_x.bridge.serve"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Aurora V3 Autonomous"
author = 50347865
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 aurora/core/aurora_nexus_v3_controller.py"

[[workflows.workflow]]
name = "Start Aurora AI Backend"
author = 50376670
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aurora_backend && pip install -r requirements.txt && python3 main.py"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
integrations = ["javascript_mem_db:1.0.0", "javascript_websocket:1.0.0", "javascript_anthropic:1.0.0"]
expertMode = true
