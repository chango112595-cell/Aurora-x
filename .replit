# Aurora Factory Worker Configuration
entrypoint = "aurora_x/main.py"

# Auto-pull latest code and run Aurora backend (Python)
run = "bash -lc 'git pull --ff-only || true; python3 aurora_x/main.py'"
onBoot = "bash -lc 'git pull --ff-only || true'"

modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 33949
externalPort = 6000

[[ports]]
localPort = 34273
externalPort = 3003

[[ports]]
localPort = 36405
externalPort = 5000

[[ports]]
