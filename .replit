[env]
PORT = "5000"
AURORA_PORT = "5000"

[workflows]
runButton = "Start Aurora"

[[workflows.workflow]]
name = "Start Aurora"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/bridge_autostart.sh || echo \"⚠️ Bridge startup had issues, continuing...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "AURORA_PORT=5000 python3 -m aurora_x.serve"

[agent]
integrations = ["javascript_mem_db:1.0.0", "javascript_websocket:1.0.0", "javascript_anthropic:1.0.0"]
expertMode = true
